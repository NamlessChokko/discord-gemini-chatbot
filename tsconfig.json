{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "./",
        "resolveJsonModule": true
    },
    "include": ["src/**/*.ts", "deploy-commands.ts", "instrument.ts"],
    "exclude": ["node_modules"]
}
